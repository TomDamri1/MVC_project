@model MVC_project.Models.Course

@{
    ViewBag.Title = "ChangeGrade";
    
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Course</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Course ID:</div>

        <div class="col-md-10">
            @ViewBag.course_id
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Student ID:</div>

        <div class="col-md-10">
            @ViewBag.student_id
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Moed</div>

        <div class="col-md-10">
            <input class="form-control" id="moed" name="moed" type="text" />
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2">Grade :</div>

        <div class="col-md-10">
            <input class="form-control" id="grade" name="grade" type="text" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
