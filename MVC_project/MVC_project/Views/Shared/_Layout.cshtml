<!DOCTYPE html>
<html>
<head>
    <style>
        .loginfield {
            margin: 10px;
            padding: 10px;
            border-radius: 10px 10px 10px 10px;
        }
    </style>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @try
                {
                    if (Session["Type"].ToString().ToLower().Equals("student"))
                    {
                        @Html.ActionLink("SCE", "StudentPage", "Login", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else if (Session["Type"].ToString().ToLower().Equals("lecturer"))
                    {
                        @Html.ActionLink("SCE", "LecturerPage", "Login", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else if (Session["Type"].ToString().ToLower().Equals("admin"))
                    {
                        @Html.ActionLink("SCE", "admin", "Login", new { area = "" }, new { @class = "navbar-brand" })
                    }
                    else
                    {
                        @Html.ActionLink("SCE", "", "", new { area = "" }, new { @class = "navbar-brand" })
                    }
                }
                catch
                {
                    @Html.ActionLink("SCE", "", "", new { area = "" }, new { @class = "navbar-brand" })
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Session["FirstName"] != null)
                    {
                        <li>@Html.ActionLink(Session["FirstName"].ToString() +" " +Session["LastName"].ToString(), "dummy", null, new { href = "#" })</li>
                        <li>@Html.ActionLink("Logout", "", "")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tom and Matan LTD</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
