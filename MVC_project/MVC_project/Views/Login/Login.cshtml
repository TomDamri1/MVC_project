@model MVC_project.ModelView.LoginViewModel
@using MVC_project.Models;
@{
    
 
}
<div class="jumbotron">
    <h1>SCE - Software Department</h1>
    <p>
        welcome to SCE software department site!<br />
        please Login.
    </p>

    <form action="Login" method="post">

        <label>User Name:</label><input type="text" id="UserName" name="UserName" style="margin:10px ; padding:10px; border-radius:10px 10px 10px 10px;" />
        <br />
        <section style="color:red">
            @Html.ValidationMessageFor(x => x.login.UserName)
        </section>

        <label>Password:</label><input type="password" id="Password" name="Password" style="margin:10px ; padding:10px; border-radius:10px 10px 10px 10px; margin-left:15px;" />

        <br />
        <section style="color:red">
            @Html.ValidationMessageFor(x => x.login.Password)
        </section>

        <input class="btn btn-primary btn-lg" style="margin:10px ; padding:10px; width: 100px" id="Login" type="submit" value="Login" />


    </form>



    <img src="https://ak0.picdn.net/shutterstock/videos/4507700/thumb/6.jpg" style="border-radius: 50% 50% 50% 50%; margin-left:275px; margin-top:-200px; width:75%" />


</div>
